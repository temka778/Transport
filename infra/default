server {
    server_name ннк-сервис.рф;
    
    location /static/ {
        alias /home/Transport/transport/static/;
    }
    
    location /media/ {
        alias /home/Transport/transport/media/;
    }
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/xn----dtbingra1ahe.xn--p1ai/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/xn----dtbingra1ahe.xn--p1ai/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
server {
    if ($host = ннк-сервис.рф) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name ннк-сервис.рф;
    return 404;
}